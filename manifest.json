{
    "manifest_version": 3,
    "name": "Browser Pal",
    "version": "0.1.0",
    "description": "BrowserPal commands for reading",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "tabGroups",
        "scripting",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background/service-worker.ts",
        "type": "module"
    },
    "action": {},
    "side_panel": {
        "default_path": "src/sidepanel/editor.html"
    }
}